<Page x:Class="CSharpCrawler.GetHtmlSourceCode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="GetHtmlSourceCode">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="网址" VerticalContentAlignment="Center"/>
            <TextBox Margin="40,0,180,0" Name="tbx_Url" VerticalContentAlignment="Center"/>
            <Button Content="同步方式获取" HorizontalAlignment="Right" Margin="0,0,90,0" Name="btn_Sync" Click="btn_Sync_Click"/>
            <Button Content="异步方式获取" HorizontalAlignment="Right" Name="btn_Async" Click="btn_Async_Click"/>
        </Grid>
        
        <RichTextBox Grid.Row="1" Name="rtbx_Content" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Page>
