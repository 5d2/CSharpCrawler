<Page x:Class="CSharpCrawler.Views.BingImageSearch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSharpCrawler.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="BingImageSearch">
    <Canvas Name="canvas">
        <Grid Width="{Binding ElementName=canvas,Path=ActualWidth}" Height="{Binding ElementName=canvas,Path=ActualHeight}" Name="grid" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBox Width="500" Height="45" Style="{StaticResource TextBoxStyle}" Margin="-230,0,0,0" FontSize="20" FontFamily="Arial" VerticalContentAlignment="Center"/>
                <Button Height="45" Content="搜索" Style="{StaticResource GlobalButtonStyle}" Margin="420,0,0,0"/>
            </Grid>

            <Grid Grid.Row="1" Name="grid_Content">
                
            </Grid>
        </Grid>
    </Canvas>
</Page>
